<Window x:Class="Ankieta.FormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ankieta"
        
        mc:Ignorable="d"
        Title="Insert Name" Height="200" Width="200">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold">Insert Your Name</Label>
            <TextBox x:Name="FirstNameBox" Margin="30,5"/>
            <TextBox x:Name="LastNameBox" Margin="30,5"/>
            <Button Content="Confirm" Margin="10" Padding="10" HorizontalAlignment="Center" Click="ConfirmNameButton_OnClick"/>
            
        </StackPanel>
    </Grid>
</Window>
